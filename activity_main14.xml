<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout tools:context=".Main14Activity"
    android:layout_centerInParent="true" android:paddingRight="10dp" android:paddingLeft="10dp"
    android:layout_height="600dp" android:layout_width="match_parent" android:paddingTop="1dp"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:paddingRight="1dp" android:paddingLeft="0dp"
        android:layout_height="150dp" android:layout_width="406dp"
        tools:layout_editor_absoluteY="108dp" tools:layout_editor_absoluteX="94dp"
        android:textColor="#000000" android:textAlignment="center"
        android:text="Distibuted urban farms"

        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true" android:id="@+id/content1"/>

    <TextView
        android:id="@+id/content2"
        android:layout_width="300dp"
        android:layout_height="144dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="59dp"
        android:paddingLeft="80dp"
        android:paddingRight="1dp"
        android:text="â€¦+ farms"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="11dp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="108dp" />

    <TextView
        android:id="@+id/content3"
        android:layout_width="287dp"
        android:layout_height="162dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="76dp"
        android:paddingLeft="105dp"
        android:paddingRight="1dp"
        android:text="Get help from other urban farmers"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="11dp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="108dp" />
    <Button
        android:layout_height="30dp"
    android:layout_width="406dp"
    android:text="farms"
    android:background="#C3E2A6"
    android:layout_weight="1"
    android:onClick="farms"         android:textSize="12dp"

    android:layout_marginTop="100dp"
    android:id="@+id/button4"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button4"
        android:layout_marginTop="-3dp"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:text="Buy local produce"
        android:textAlignment="center"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="108dp" />

    <TextView
        android:id="@+id/content4"
        android:layout_width="383dp"
        android:layout_height="45dp"
        android:layout_below="@id/textView2"
        android:layout_marginTop="-14dp"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:text="Buy or sell locally grown produce"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="11dp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="108dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="406dp"
        android:layout_height="30dp"
        android:layout_below="@+id/content4"
        android:layout_marginTop="-11dp"
        android:layout_weight="1"
        android:background="#C3E2A6"
        android:onClick="produce"
        android:textSize="12dp"
        android:text="buy local produce" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button5"
        android:layout_marginTop="9dp"
        android:paddingLeft="55dp"
        android:paddingRight="25dp"
        android:text="Start a farm"
        android:textAlignment="center"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="108dp" />

    <TextView
        android:id="@+id/content5"
        android:layout_width="369dp"
        android:layout_height="55dp"
        android:layout_below="@id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-13dp"
        android:layout_marginRight="-13dp"
        android:paddingLeft="55dp"
        android:paddingRight="25dp"
        android:text="Have space where cultivation can be done?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="11dp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="108dp" />

    <TextView
        android:id="@+id/content6"
        android:layout_width="369dp"
        android:layout_height="41dp"
        android:layout_below="@id/content5"
        android:layout_marginTop="-42dp"
        android:paddingLeft="55dp"
        android:paddingRight="25dp"
        android:text="Get started today"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="11dp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="108dp" />

    <Button
        android:id="@+id/button11"
        android:layout_width="406dp"
        android:layout_height="30dp"
        android:layout_below="@+id/content6"
        android:layout_marginTop="-23dp"
        android:layout_weight="1"
        android:background="#C3E2A6"
        android:onClick="addfarm"         android:textSize="12dp"

        android:text="start a farm" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="229dp"
        android:layout_below="@id/button11">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:layout_alignParentTop="true" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:padding="2dp"
            app:centered="true"
            app:fillColor="#008000"
            app:pageColor="#fff"
            app:snap="false" />
    </RelativeLayout>
</RelativeLayout>