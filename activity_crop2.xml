<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:padding="5dp">

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:orientation="vertical" >

    <RelativeLayout
    tools:context="com.example.ptljdf.Crop2Activity"
    android:gravity="top|bottom"
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="14sp" android:text="Crop Guide" android:id="@+id/name"/>

    <View android:layout_height="1dp" android:layout_width="match_parent"
        android:id="@+id/seperator"
        android:background="#000000"
        android:layout_marginTop="10dp" android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingTop="34dp" android:text="New Text"
        android:id="@+id/crop2"
       android:layout_alignParentStart="true"
        android:scrollbars="vertical"

        android:textSize="13sp"
        android:gravity="top"
        android:layout_alignParentLeft="true"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:text="@string/text_to_speech"
        android:id="@+id/button" android:layout_marginTop="30dp"
android:textColor="#ffffff"
        android:background="#008000"
        android:layout_below="@+id/crop2" android:layout_centerHorizontal="true"/>
    <ListView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp" android:id="@+id/listView"
        android:layout_marginTop="10dp"/>


</RelativeLayout>
    </LinearLayout>


</ScrollView>