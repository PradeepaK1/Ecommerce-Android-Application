    <Button android:layout_height="88dp" android:layout_width="406dp" android:onClick="home" android:text="home" android:background="#C3E2A6" android:layout_weight="1" android:layout_marginTop="5dp" android:layout_alignParentTop="true" android:id="@+id/button"/>

